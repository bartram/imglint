{
  "name": "imglint",
  "version": "1.0.0",
  "description": "A tool for checking image files",
  "bin": "./dist/cli.js",
  "main": "./dist/index.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig.build.json && chmod +x ./dist/cli.js",
    "start": "npm run build && node ./dist/cli.js",
    "test": "vitest src/**/*.test.ts --silent=false",
    "lint": "eslint src/**/*.ts",
    "format": "prettier src/**/*.ts --check",
    "prepublish": "npm run build"
  },
  "git repository": "https://github.com/bartram/imglint",
  "keywords": [
    "lint",
    "image",
    "exif",
    "iptc"
  ],
  "type": "module",
  "author": "Bartram Nason <bartram@bartramnason.com>",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.0.0",
    "exifr": "^7.1.3",
    "findup-sync": "^5.0.0",
    "image-size": "^1.2.0",
    "lodash-es": "^4.17.21",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/findup-sync": "^4.0.5",
    "@types/lodash-es": "^4.17.12",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0",
    "vitest": "^2.1.8"
  }
}
