{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": false,
    "types": [
      "node",
      "vitest/globals"
    ],
  },
  "include": [
    "src"
  ],
}